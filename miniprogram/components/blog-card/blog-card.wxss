page {
    background-color: #f1f1f1;
}

.blog {
    padding: 20rpx;
    background-color: #fff;
}

.blog-title {
    display: flex;
    align-items: center;
}

.blog-tag{
    background: #d43c33;
    color: #fff;
    font-size: 28rpx;
    padding: 0 20rpx;
}

.blog-portrait {
    width: 64rpx;
    height: 64rpx;
    border-radius: 50%;
    margin-right: 20rpx;
}

.blog-box {
    flex: 1;
}

.blog-time {
    font-size: 24rpx;
    color: #939393;
}

.blog-content {
    margin: 20rpx 0;
    font-size: 32rpx;
    font-weight: 400;
    line-height: 1.5;
}

.blog-img {
    display: flex;
    flex-wrap: wrap;
    margin: 0 auto;
}

.blog-img .img {
    width: 230rpx;
    height: 230rpx;
    margin-right: 10rpx;
    margin-bottom: 10rpx;
    background: #eee;
}

.blog-img .img:nth-child(3n) {
    margin-right: 0;
}

.blog-nickname {
    font-size: 32rpx;
}
