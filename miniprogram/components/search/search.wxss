/* components/search/search.wxss */
.container {
    display: flex;
    align-items: center;
    margin-left: 0rpx;
    position: relative;
}

.bar {
    flex: 1;
    height: 68rpx;
    font-size: 28rpx;
    border-radius: 50px;
    background-color: #f5f5f5;
    padding-left: 60rpx;
}

.in-bar {
    color: #999;
}

.search {
    background: #d43c33;
    color: #fff;
    margin-left: 20rpx;
    font-size: 24rpx;
}

.find {
    position: absolute;
    top: 50%;
    transform: translateX(16rpx) translateY(-50%);
    color: #9f9f9f;
}
