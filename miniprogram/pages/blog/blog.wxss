/* pages/blog/blog.wxss */
.header {
    display: flex;
    align-items: center;
    padding: 0 20rpx;
    background-color: #fff;
    height: 100rpx;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    z-index: 99;
    box-sizing: border-box;
}

.search-container {
    flex: 1;
}

.blog-list {
    width: 100%;
    margin-top: 120rpx;
}

.blog-panel {
    margin-bottom: 20rpx;
    box-sizing: border-box;
}

.publish-container {
    position: fixed;
    bottom: 60rpx;
    width: 120rpx;
    height: 120rpx;
    border-radius: 60rpx;
    background-color: #FBD956;
    display: flex;
    align-items: center;
    justify-content: center;
}

.publish-container .icon-jiahao {
    font-size: 45rpx;
    font-weight: bold;
}

.blog-shanchu {

}

.text-shanchu {
    font-size: 24rpx;
    color: #939393;
}

.blog-control {
    padding-left: 20rpx;
    padding-right: 20rpx;
    padding-bottom: 20rpx;
    background-color: white;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
}

.blog-zan {
    padding: 10rpx;
    color: #939393;
}
